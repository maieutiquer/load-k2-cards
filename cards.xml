<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3" type="plugin" group="content">
  <name>plg_content_cards</name>
  <author>daniel rodriguez</author>
  <creationDate>august 2014</creationDate>
  <copyright>no one at all</copyright>
  <license>GNU General Public License version 3, or later</license>
  <authorEmail>maieutiquer@gmail.com</authorEmail>
  <authorUrl>http://maieutiquer.com</authorUrl>
  <version>1.0.1</version>
  <description>PLG_CONTENT_CARDS_XML_DESCRIPTION</description>
  <files>
    <filename plugin="cards">cards.php</filename>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="cardstext" type="text"
            default="50"
            description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
            label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
            size="5"
        />
        <field name="cardsradio" type="radio"
            default="0"
            description="JFIELD_PLG_SEARCH_ALL_DESC"
            label="JFIELD_PLG_SEARCH_ALL_LABEL"
        >
          <option value="0">JOFF</option>
          <option value="1">JON</option>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>
